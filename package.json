{
  "name": "build-replication-tool",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "build-task:scss-compile": "node-sass-chokidar --source-map true src/scss/ -o dist/css",
    "build-task:autoprefixer": "postcss dist/css/*.css --use autoprefixer -d dist/css",
    "sass:build": "npm-run-all -p build-task:*",
    "watch": "chokidar \"src/scss/*.scss\" -c \"npm run sass:build\"",
    "dev": "npm-run-all -p sass:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ClaudiuCudla/build-replication-tool.git"
  },
  "keywords": [],
