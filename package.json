  "bugs": {
    "url": "https://github.com/ClaudiuCudla/build-replication-tool/issues"
  },
  "homepage": "https://github.com/ClaudiuCudla/build-replication-tool#readme",
  "dependencies": {
    "autoprefixer": "^9.8.6",
    "chokidar-cli": "^2.1.0",
    "node-sass-chokidar": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1"
  }
}
